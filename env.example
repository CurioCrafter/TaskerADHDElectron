# TaskerADHD Environment Configuration
# Copy this file to .env and fill in your values

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/taskeradhd"

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_URL="redis://localhost:6379"

# ================================
# JWT AUTHENTICATION
# ================================
# Generate a secure random string for production
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# ================================
# APPLICATION URLS
# ================================
CLIENT_URL="http://localhost:3000"
API_URL="http://localhost:3001"

# ================================
# VOICE & AI PROVIDERS
# ================================

# Speech-to-Text Provider
# Options: "mock" (development), "openai" (production)
STT_PROVIDER="mock"

# Large Language Model Provider  
# Options: "mock" (development), "openai" (production)
LLM_PROVIDER="mock"

# OpenAI API Configuration (if using OpenAI providers)
OPENAI_API_KEY="your-openai-api-key-here"

# ================================
# EMAIL CONFIGURATION
# ================================

# SMTP Settings (for magic link emails)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@taskeradhd.com"

# ================================
# DEVELOPMENT SETTINGS
# ================================
NODE_ENV="development"
PORT="3001"

# ================================
# FRONTEND CONFIGURATION
# ================================
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_WS_URL="http://localhost:3001"

# ================================
# OPTIONAL: OBSERVABILITY
# ================================

# Logging Level
LOG_LEVEL="info"

# Sentry (Error Tracking)
# SENTRY_DSN="your-sentry-dsn"

# Analytics
# ANALYTICS_ID="your-analytics-id"

# ================================
# OPTIONAL: OBJECT STORAGE
# ================================

# For storing audio files (if persisting voice recordings)
# AWS S3 / Compatible Storage
# OBJECT_STORAGE_ENDPOINT="https://s3.amazonaws.com"
# OBJECT_STORAGE_BUCKET="taskeradhd-audio"
# OBJECT_STORAGE_ACCESS_KEY="your-access-key"
# OBJECT_STORAGE_SECRET_KEY="your-secret-key"
# OBJECT_STORAGE_REGION="us-east-1"

# ================================
# SECURITY SETTINGS
# ================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# ================================
# FEATURE FLAGS
# ================================

# Enable/disable features
ENABLE_VOICE_CAPTURE="true"
ENABLE_AI_SHAPING="true"
ENABLE_COLLABORATION="false"
ENABLE_INTEGRATIONS="false"

# ================================
# ADHD-SPECIFIC SETTINGS
# ================================

# Default task limits (ADHD-friendly)
DEFAULT_MAX_TODAY_TASKS="7"
DEFAULT_MAX_PROPOSAL_TASKS="5"

# Voice session settings
VOICE_SESSION_TIMEOUT_MS="300000"  # 5 minutes
AUTO_SHAPE_MIN_TRANSCRIPT_LENGTH="10"

# ================================
# PRODUCTION OVERRIDES
# ================================
# In production, override these in your deployment environment:
# 
# NODE_ENV="production"
# DATABASE_URL="your-production-database-url"
# REDIS_URL="your-production-redis-url"
# JWT_SECRET="your-production-jwt-secret"
# CLIENT_URL="https://your-domain.com"
# STT_PROVIDER="openai"
# LLM_PROVIDER="openai"
# OPENAI_API_KEY="your-production-openai-key"
